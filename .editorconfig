root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab
