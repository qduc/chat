# shellcheck disable=SC2034

## Authentication
JWT_SECRET=change-me

## Provider & tool configuration now lives in Settings â†’ Providers & Tools
# Add API keys, base URLs, and default models in-app; they are no longer read from .env files.
PORT=3001
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX=50
ALLOWED_ORIGIN=http://localhost:3000

# Logging
# LOG_LEVEL can be: trace, debug, info, warn, error, fatal (default: debug in dev, info in prod)
# LOG_PRETTY=true enables human-friendly logs in dev (disabled automatically in production)
LOG_LEVEL=debug
LOG_PRETTY=true

# Checkpoint persistence (defaults keep streaming safe)
CHECKPOINT_ENABLED=true
CHECKPOINT_INTERVAL_MS=3000
CHECKPOINT_MIN_CHARACTERS=500

# Provider timeout settings (in milliseconds)
# PROVIDER_TIMEOUT_MS=10000
# PROVIDER_MODEL_FETCH_TIMEOUT_MS=3000
# PROVIDER_STREAM_TIMEOUT_MS=300000
