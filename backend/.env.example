# shellcheck disable=SC2034

## Provider selection (default: openai)
PROVIDER=openai

## Generic provider config (falls back to OpenAI values)
# PROVIDER_BASE_URL=
# PROVIDER_API_KEY=
# PROVIDER_HEADERS_JSON={"X-Custom":"Value"}

## OpenAI-compatible defaults (kept for backward-compat)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-xxxxx
TAVILY_API_KEY=tvly-xxxxx # Optional: Tavily web search tool
EXA_API_KEY=exa-xxxxx     # Optional: Exa web search tool
SEARXNG_BASE_URL=http://localhost:8080 # Optional: SearXNG web search tool

DEFAULT_MODEL=gpt-4.1-mini
TITLE_MODEL=gpt-4.1-mini
PORT=3001
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX=50
ALLOWED_ORIGIN=http://localhost:3000

# Logging
# LOG_LEVEL can be: trace, debug, info, warn, error, fatal (default: debug in dev, info in prod)
# LOG_PRETTY=true enables human-friendly logs in dev (disabled automatically in production)
LOG_LEVEL=debug
LOG_PRETTY=true

# Provider timeout settings (in milliseconds)
# PROVIDER_TIMEOUT_MS=10000
# PROVIDER_MODEL_FETCH_TIMEOUT_MS=3000
# PROVIDER_STREAM_TIMEOUT_MS=300000
