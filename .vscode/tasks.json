{
  // Helpful tasks when developing inside the dev container
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start docker dev server",
      "type": "shell",
      "command": "./dev.sh up",
      "problemMatcher": []
    },
    {
      "label": "Restart docker dev server",
      "type": "shell",
      "command": "./dev.sh restart",
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "./dev.sh build",
      "problemMatcher": []
    },
    {
      "label": "Tail log backend",
      "type": "shell",
      "command": "./dev.sh logs backend -f --tail 100",
      "problemMatcher": []
    },
    {
      "label": "Tail log frontend",
      "type": "shell",
      "command": "./dev.sh logs frontend -f --tail 100",
      "problemMatcher": []
    },
    {
      "label": "Backend: dev",
      "type": "shell",
      "command": "npm --prefix backend run dev",
      "problemMatcher": []
    },
    {
      "label": "Frontend: dev",
      "type": "shell",
      "command": "npm --prefix frontend run dev",
      "problemMatcher": []
    }
  ]
}
