{
  "name": "chat-electron",
  "author": {
    "name": "Duc Nguyen",
    "email": "chatforge@qduc.me"
  },
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/qduc/chat.git"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.20",
    "@mozilla/readability": "^0.6.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "node-fetch": "^3.3.2",
    "pino": "^9.3.2",
    "pino-roll": "^3.1.0",
    "turndown": "^7.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.chatforge.app",
    "productName": "ChatForge",
    "icon": "assets/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["!node_modules", "!**/*.test.js", "!coverage", "!__tests__"]
      },
      {
        "from": "../frontend/out",
        "to": "frontend/out"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
