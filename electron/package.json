{
  "name": "chat-electron",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.20",
    "@mozilla/readability": "^0.6.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "node-fetch": "^3.3.2",
    "pino": "^9.3.2",
    "pino-roll": "^3.1.0",
    "turndown": "^7.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.chatforge.app",
    "productName": "ChatForge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/out/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/src/db/migrations",
        "to": "backend/src/db/migrations"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
